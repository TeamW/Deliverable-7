<project>
	<property environment="env"/>
	<!-- Build classes -->
	<target name="compile">
		<mkdir dir="build/classes"/>
		<javac srcdir="../internSrc/" destdir="build/classes"/>
	</target>
	<!-- Generate jar(s) -->
	<target name="jar">
		<jar destfile="build/internMan.jar" basedir="build/classes">
			<manifest>
				<attribute name="Main-Class" value="uk.ac.glasgow.internman.ui.InternManCLUI"/>
			</manifest>
		</jar>
	</target>
	<!-- Install -->
	<target name="install">
		<copy file="build/internMan.jar" tofile="internMan.jar"/>
	</target>
	<!-- Generate JavaDoc -->
	<target name="javadoc">
		<mkdir dir="javadoc"/>
		<javadoc sourcepath="system/src" destdir="javadoc"/>
		<javadoc sourcepath="clui/src" destdir="javadoc"/>
	</target>
	<!-- Run the generated jar -->
	<target name="run">
		<java jar="internMan.jar" fork="true"/>
	</target>
</project>